<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#6B6E6F"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_to"
        android:layout_margin="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/its_raining_cats"
        android:text="It's Raining Cats"
        android:layout_below="@+id/welcome_to"
        android:layout_centerHorizontal="true"
        android:textColor="#E82391"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:id="@+id/cuddlykitties"
        android:src="@drawable/cuddlykitties"
        android:adjustViewBounds="true"
        android:layout_margin="20dp"
        android:layout_below="@id/its_raining_cats"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/location"
        android:layout_below="@id/cuddlykitties"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:id="@+id/phone"
        android:layout_below="@id/location"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours:"
        android:id="@+id/hours"
        android:layout_below="@id/phone"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:"
        android:id="@+id/website"
        android:layout_below="@id/hours_weekend"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345 Main St. Mountain View, CA"
        android:id="@+id/address"
        android:layout_below="@id/cuddlykitties"
        android:layout_toRightOf="@id/location"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650.408.1234"
        android:id="@+id/number"
        android:layout_below="@id/location"
        android:layout_toRightOf="@id/phone"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M - F 8:00am - 7:00pm"
        android:id="@+id/hours_detail"
        android:layout_below="@id/phone"
        android:layout_toRightOf="@id/phone"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat 9:00am - 8:00pm"
        android:id="@+id/hours_weekend"
        android:layout_below="@id/hours"
        android:layout_toRightOf="@id/phone"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WWW.itsRainingCats.org"
        android:id="@+id/site"
        android:layout_below="@id/hours_weekend"
        android:layout_toRightOf="@id/website"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come by the cattery today and meet your new furry friend!"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

</RelativeLayout>